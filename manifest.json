{
  "manifest_version": 2,

  "name": "PrivateFace",
  "description": "This extension makes the privacy implications of posting on Facebook more
  obvious by giving posts subtle background colors based on how public they are.",

  "version": "1.0",

  "icons": {
    "128": "icon.ico"
  },

  // create the clickable browser icon and set where it goes
  "browser_action": {
    "default_icon": "icon.ico",
    "default_popup": "popup.html"
  },

  "content_scripts": [
   {
     "matches": ["https://www.facebook.com/*", "http://www.facebook.com/*"],
     "css": ["styles.css"],
     "js": ["privateface.js"]
   }
  ],

  "permissions": [
    "activeTab",
    "https://www.facebook.com/"
  ],

  "author": "Michael Alexander"
}